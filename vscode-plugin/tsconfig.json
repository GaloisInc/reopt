// see https://www.typescriptlang.org/docs/handbook/project-references.html
{
    "compilerOptions": {
        "allowJs": true,
        "baseUrl": ".",
        "composite": true,
        "module": "CommonJS",
        "paths": {
            "@extension/*": [
                "src/extension/*",
            ],
            "@shared/*": [
                "src/shared/*",
            ],
            "@webview/*": [
                "src/webview/*",
            ],
        },
        "resolveJsonModule": true,
        "rootDirs": [
            "src/extension",
            "src/shared",
            "src/activity-webview",
            "src/reopt-vcg-webview",
        ],
    },
    "files": [
        "package.json",
        "webpack.config.ts",
    ],
}
