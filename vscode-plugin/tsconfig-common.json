{
	"compilerOptions": {
        "allowSyntheticDefaultImports": true,
		"declaration": true,
		"declarationMap": true,
		"jsx": "react",
		"moduleResolution": "Node",
		"noFallthroughCasesInSwitch": true,
		"noImplicitReturns": true,
		"noUnusedParameters": true,
		"resolveJsonModule": true,
		"sourceMap": true,
		"strict": true,
		/* There is currently a bug where ES2020+ does not handle
		 * chaining operator correctly! */
		"target": "ES2019",
	},
	"exclude": [
		"node_modules",
		".vscode-test"
	],
}
